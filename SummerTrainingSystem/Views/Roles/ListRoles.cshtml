@using Microsoft.AspNetCore.Identity
@model List<IdentityRole>

@{
    ViewData["Title"] = "Roles";
}


<div class="container mt-5">
    <row>
        <div class="col-lg-8">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="display-5">Roles</h1>
                <a class="btn btn-primary" asp-controller="Roles" asp-action="CreateRole">
                    Create Role <i class="fas fa-plus-circle"></i>
                </a>
            </div>
            <hr />

            @if (Model.Count == 0)
            {
                <div class="alert alert-info">
                    No roles to show.
                </div>
            }
            else
            {
                foreach (var role in Model)
                {
                    <div class="d-flex justify-content-between align-items-center border-2 mt-4">
                        <h5 class="card-title">@role.Name</h5>
                        <button class="btn btn-danger" onclick=deleteRole('@role.Id')>
                            <i class="fas fa-trash"></i>
                            <div class="spinner-border spinner-border-sm d-none" role="status" id="@role.Id">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </button>
                    </div>
                }
            }
        </div>
    </row>
</div>

@section Scripts{
<script src="~/js/ListRoles.js"></script>
}