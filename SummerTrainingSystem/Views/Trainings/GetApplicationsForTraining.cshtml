@model TrainingVM
@{
    ViewData["Title"] = "Applications";
}
<div class="container mt-5">
    Candidates For <span class="fs-5 fw-bolder">@Model.Title</span>
    <hr />
    @if(Model.Students.Count() == 0)
    {
        <div class="alert alert-info">
            No applications yet.
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-lg-8">
                <div class="table-responsive">
                    <table class="table table-primary">
                        <thead>
                            <tr>
                                <th>Full Name</th>
                                <th>Email</th>
                                <th>Department</th>
                                <th>Phone</th>
                                <th>Level</th>
                                <th>GPA</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var s in @Model.Students)
                            {
                                <tr>
                                    <td>@s.FirstName @s.LastName</td>
                                    <td>@s.Email</td>
                                    <td>@s.Department.Abbreviation</td>
                                    <td>@s.PhoneNumber</td>
                                    <td>@s.Level</td>
                                    <td>@s.Gpa</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>