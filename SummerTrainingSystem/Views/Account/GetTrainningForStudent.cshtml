@model StudentVM
    @{
        ViewData["Title"] = "Applications";
    }

    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8">

                @if (Model.Trainnings.Count() == 0)
                {
                    <div class="alert alert-info">
                        You have not applied to any trainings yet.
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-light">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Type</th>
                                    <th>Created At</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var tr in @Model.Trainnings)
                                {
                                    <tr>
                                        <td><a asp-controller="Trainings" asp-action="Details" asp-route-id="@tr.Id">@tr.Title</a></td>
                                        <td>@tr.TrainingType.TypeName</td>
                                        <td>@tr.CreatedAt.ToString("d")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
    @section Scripts{
        <script src="~/js/trainingForCompany.js"></script>
    }
