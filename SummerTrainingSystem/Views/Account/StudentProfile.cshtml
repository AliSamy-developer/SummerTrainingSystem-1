@model StudentVM
@{
    ViewData["title"] = "Profile";
}
<link href="~/css/profile.css" rel="stylesheet" />
<div class="student-profile py-4">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3 mb-3">
                <div class="card align-items-center shadow-sm">
                    <div class="profile-pic my-2">
                        <label class="-label" for="ProfilePictureFile">
                            <i class="fas fa-camera"></i>
                            <span>Change Image</span>
                        </label>
                        <input id="ProfilePictureFile" type="file" onchange="loadFile(event)"/>
                        <img src="~/uploads/@(Model.ProfilePictureUrl ?? "avatar.svg")" 
                        id="ProfilePicture" 
                        width="200" 
                        alt="profile" asp-append-version="true"/>
                    </div>
                    <div class="spinner-border text-secondary spinner-border-sm d-none" role="status" id="profilePicSpinner">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <h4 class="mt-3 text-secondary text-uppercase">@Model.FirstName @Model.LastName</h4>
                </div>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="card shadow-sm">
                    <div class="card-header bg-transparent border-0">
                        <h3 class="mb-0"><i class="far fa-clone pr-1"></i> Information</h3>
                    </div>
                    <div class="card-body pt-0">
                        <table class="table table-bordered">
                            <tr>
                                <th width="30%">ID</th>
                                <td width="2%">:</td>
                                <td>@Model.UniversityID</td>
                            </tr>
                            <tr>
                                <th width="30%">Email</th>
                                <td width="2%">:</td>
                                <td>@Model.Email</td>
                            </tr>
                            <tr>
                                <th width="30%">Phone</th>
                                <td width="2%">:</td>
                                <td>@Model.PhoneNumber</td>
                            </tr>
                            <tr>
                                <th width="30%">Level</th>
                                <td width="2%">:</td>
                                <td>@Model.Level</td>
                            </tr>
                            <tr>
                                <th width="30%">Gpa</th>
                                <td width="2%">:</td>
                                <td>@Model.Gpa</td>
                            </tr>
                            <tr>
                                <th width="30%">Department</th>
                                <td width="2%">:</td>
                                <td>@Model.Department.Abbreviation</td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
