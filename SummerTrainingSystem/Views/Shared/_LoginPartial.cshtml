<ul class="navbar-nav ml-auto">
    @if (User.Identity.IsAuthenticated)
    {

        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Hello @User.Identity.Name
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                @if (User.IsInRole("Student"))
                {
                    <a class="dropdown-item" asp-controller="Account" asp-action="EditStudent">
                        Edit Profile
                    </a>
                }
                @if (User.IsInRole("Supervisor"))
                {
                    <a class="dropdown-item" asp-controller="Account" asp-action="EditSupervisor">
                        Edit Profile
                    </a>
                }
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" asp-controller="Account" asp-action="Logout">Logout</a>
            </div>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
        </li>
    }
</ul>