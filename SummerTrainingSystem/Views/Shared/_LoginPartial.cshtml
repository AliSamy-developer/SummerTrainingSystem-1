@using SummerTrainingSystemCore.Enums

@if (User.Identity.IsAuthenticated)
{
    <ul class="navbar-nav ml-auto text-center">
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <partial name="_ProfilePictureLogicPartial"/>
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                @if (User.IsInRole(Roles.Student.ToString()))
                {
                    <a class="dropdown-item" asp-controller="Account" asp-action="GetTrainningForStudent">
                        <i class="fas fa-list me-1"></i> Applications
                    </a>
                    <a class="dropdown-item" asp-controller="Account" asp-action="StudentProfile">
                        <i class="fas fa-user me-1"></i> Profile
                    </a>
                    <a class="dropdown-item" asp-controller="Account" asp-action="EditStudent">
                        <i class="fas fa-edit me-1"></i>Edit Profile
                    </a>
                }
                else if (User.IsInRole(Roles.Supervisor.ToString()))
                {
                    <a class="dropdown-item" asp-controller="Account" asp-action="SupervisorProfile">
                        <i class="fas fa-user me-1"></i> Profile
                    </a>
                    <a class="dropdown-item" asp-controller="Account" asp-action="EditSupervisor">
                        <i class="fas fa-edit me-1"></i> Edit Profile
                    </a>
                }
                else if (User.IsInRole(Roles.Company.ToString()))
                {
                    <a class="dropdown-item" asp-controller="Account" asp-action="GetTrainingsForCompany">
                        <i class="fas fa-list me-1"></i> My Trainings
                    </a>
                    <a class="dropdown-item" asp-controller="Account" asp-action="CompanyProfile">
                        <i class="fas fa-user me-1"></i> Profile
                    </a>
                }
                <form method="post" asp-action="Logout" asp-controller="Account">
                    <button class="dropdown-item" type="submit"><i class="fas fa-sign-out-alt me-1"></i> Logout</button>
                </form>
            </div>
        </li>
    </ul>
}