@model List<Department>
@{
    ViewData["Title"] = "All Departments";
}

<div class="container mt-5">
    <row>
        <div class="col-lg-8">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="display-5">Departments</h1>
                <a class="btn btn-primary" asp-controller="Departments" asp-action="CreateDepartment">
                    Create Department <i class="fas fa-plus-circle"></i>
                </a>
            </div>
            <hr />

            @if (Model.Count == 0)
            {
                <div class="alert alert-info">
                    No Departments to show.
                </div>
            }
            else
            {
                @foreach (var department in Model)
                {
                    <div class="d-flex justify-content-between align-items-center border-2 mt-4">
                        <h5 class="card-title">@department.Name (@department.Abbreviation)</h5>
                        <button class="btn btn-danger" onclick=deleteDepartment('@department.Id')>
                            <i class="fas fa-trash"></i>
                            <div class="spinner-border spinner-border-sm d-none" role="status" id="@department.Id">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </button>
                    </div>
                }
            }
        </div>
    </row>
</div>

<script src="~/js/Departments.js"></script>