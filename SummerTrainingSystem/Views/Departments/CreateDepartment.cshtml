@model CreateDepartmentVM
@{
    ViewData["Title"] = "Create Department";
}
<div class="container my-5">
    <div class="row">
        <div class="col-lg-10 col">
            <h1 class="display-5">Create New Department</h1>
            <hr />
            <div class="row">
                <form method="post">
                    <div class="col-md-6">
                        <div class="mt-3">
                            <label asp-for="Name"></label>
                            <input class="form-control" asp-for="Name" />
                            <span class="text-danger" asp-validation-for="Name"></span>

                        </div>
                        <div class="mt-3">
                            <label asp-for="Abbreviation"></label>
                            <input class="form-control" asp-for="Abbreviation" />
                            <span class="text-danger" asp-validation-for="Abbreviation"></span>
                        </div>

                        <div class="mt-4 d-flex justify-content-between">
                            <button type="submit" class="btn btn-success">Save</button>
                            <a class="btn btn-dark" asp-controller="Departments" asp-action="GetDepartments">Back</a>
                        </div>

                    </div>
                </form>
                <div class="mt-4 bg-danger p-2 text-white" asp-validation-summary="ModelOnly"></div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}